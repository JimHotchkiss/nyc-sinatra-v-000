<h1>Update Landmarks:</h1>

<form action="/landmarks/<%=@landmark.id%>" method="POST">

    <input type="hidden"
           name="_method"
           value="PATCH">
    <label>Name:</label>
    <input type="text"
           name="landmark[name]"
           value="<%=@landmark.name%>"
           id="name"></br>

    <label>Year Completed:</label>
    <input type="text"
           name="landmark[year_completed]"
           value="<%=@landmark.year_completed%>"
           id="year_completed">
    <br></br>

    <input type="submit" value="Edit Landmark">


</form>
