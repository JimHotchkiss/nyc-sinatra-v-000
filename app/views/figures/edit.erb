<h1>Update Figure:</h1>
<form action="/figures/<%=@figure.id%>" method="post">

  <input type="hidden" name="_method" value="PATCH">
  <label>Name:</label>
  <input type="text" name="figure[name]" value="<%=@figure.name%>" id="figure_name">
  <br></br>

  <label>Titles:</label>
  <%Title.all.each do |title|%>
  <ul>
    <li><input type="checkbox" name="figure[title_ids]" <%= 'checked' if @figure.titles.include?(title)%>><%=title.name%></li>
  </ul>
  <%end%>
  <br></br>

  <label>Landmark:</label>
  <input type="text" name="landmark[name]" id="new_landmark">



  <input type="submit" value="Edit Figure">
</form>
